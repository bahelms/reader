<div class="row" id="article_data">
  <div class="row">
    <div class="col-md-1 col-md-offset-4 text-right">
      <strong>Title:</strong>
    </div>
    <div class="col-md-7"><%= @article.title %></div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-4 text-right">
      <strong>URL:</strong>
    </div>
    <div class="col-md-7">
      <%= link @article.url, to: @article.url %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-4 text-right">
      <strong>Category:</strong>
    </div>
    <div class="col-md-7"><%= @article.category %></div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-4 text-right">
      <strong>Read:</strong>
    </div>
    <div class="col-md-7"><%= @article.read %></div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-4 text-right">
      <strong>Favorite:</strong>
    </div>
    <div class="col-md-7"><%= @article.favorite %></div>
  </div>
</div>

<div class="row" id="edit_article_buttons">
  <div class="col-md-4 col-md-offset-4">
    <%= button "Delete", to: article_path(@conn, :delete, @article), 
      method: "delete", class: "btn btn-danger"%>
    <%= link "Edit", to: article_path(@conn, :edit, @article), 
      class: "btn btn-warning" %>
    <%= status_button(:favorite, @conn, @article) %>
    <%= status_button(:read, @conn, @article) %>
  </div>
</div>

